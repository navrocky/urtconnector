# Created By Thief
 
pkgname=urtconnector
pkgver=91
pkgrel=1
pkgdesc="urtconnector for urban terror 4.1"
arch=('i686' 'x86_64')
license=('GPL')
url="http://code.google.com/p/urtconnector"
depends=('qt>=4.3.0' 'qstat')
makedepends=('pkgconfig' 'cmake>=2.6' 'subversion' 'boost')
provides=('urtconnector')
source=()
md5sums=()
_svntrunk=http://urtconnector.googlecode.com/svn/trunk/
_svnmod=urtconnector
 
build() {
svn co $_svntrunk $_svnmod
  msg "SVN checkout done or server timeout"
  msg "Starting make..."
        cd ${srcdir}/$_svnmod/src || return 1
  cmake -DCMAKE_INSTALL_PREFIX:PATH=/usr .. || return 1
make || return 1
make DESTDIR="$pkgdir" install || return 1
}